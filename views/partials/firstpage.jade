div.wrapper_width.wrapper_height
	div.login_wrap
		div.login
			div.login_title Register
			div.login_item
				div
					label(for='name') Nickname
				input#name(type='text' name='name' ng-model='data.name' ng-maxlength='20')
				//- div(ng-show='user.name.$error') エラー
			div.login_item Password
				div
					label(for='password')
				input#name(type='text' name='password' ng-model='data.password' ng-maxlength='20')
				//- div(ng-show='user.name.$error') エラー
			div.login_item
				button.button(ng-click='createUser()') Register

	div.login_wrap
		div.login
			div.login_title Login
			div.login_item
				div
					label(for='name') Nickname
				input#name(type='text' name='name' ng-model='user.name' ng-maxlength='20')
				//- div(ng-show='user.name.$error') エラー
			div.login_item Password
				div
					label(for='password')
				input#name(type='text' name='password' ng-model='user.password' ng-maxlength='20')
				//- div(ng-show='user.name.$error') エラー
			div.login_item
				button.button(ng-click='loginUser()') Login

	div(ng-repeat='user in users') {{user.name}}